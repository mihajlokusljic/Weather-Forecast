<Window x:Class="WeatherForecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherForecast"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Height="321" Margin="0,0,0.4,-0.2" VerticalAlignment="Bottom">
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Foreground="White"
                           FontWeight="Bold" FontSize="24">
                    <Run Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                    <Run Text=", " />
                    <Run Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" />
        </TextBlock>
        <Label Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="57,31,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
