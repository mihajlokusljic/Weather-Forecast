<UserControl x:Class="WeatherForecast.DayWeatherSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherForecast"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <Label Foreground="White" HorizontalAlignment="Center" FontSize="18">Day of week</Label>
        <Label Foreground="White" HorizontalAlignment="Center" FontSize="18">mm/dd/yyyy</Label>
        <Image Source="resources/images/Rain.png" Width="100" Height="100"/>
        <Label Foreground="White" HorizontalAlignment="Center" FontSize="18">Some description</Label>
        <Label Foreground="White" FontSize="18">Min temp: -XY °C</Label>
        <Label Foreground="White" FontSize="18">Max temp: XY °C</Label>
    </StackPanel>
</UserControl>
